-- Initial pivotal-tracker.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                pivotal-tracker
version:             0.2.0.0
synopsis:            A library and a CLI tool for accessing Pivotal Tracker API
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Utku Demir
maintainer:          utdemir@gmail.com
-- copyright:           
category:            Web
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

source-repository head
  type:     git
  location: https://github.com/utdemir/hs-pivotal-tracker  

library
  exposed-modules:   Web.Tracker
                   , Web.Tracker.Story
  build-depends:       base >=4.6 && <4.11
                     , servant
                     , servant-client
                     , aeson
                     , http-client
                     , http-client-tls
                     , mtl
                     , text
                     , transformers
                     , time
                     , aeson-casing
  hs-source-dirs:      src
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings

executable tracker
  main-is: src/Main.hs
  build-depends:      base >=4.6 && <4.11
                    , pivotal-tracker
                    , servant
                    , text
                    , either
                    , transformers
  default-language: Haskell2010
  default-extensions:  OverloadedStrings
  
test-suite tracker-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , hspec
                     , pivotal-tracker
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings
